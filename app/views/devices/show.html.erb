<div class="container-fluid">
  <h1>Show Device</h1>
  <div class="row col-xs-6 col-sm-6 col-md-6 col-lg-6">
   <table class="table table-striped table-bordered table-hover table-condensed table-responsive">
     <tbody>
       <tr>
         <td style="background-color: #dddddd"><strong>ID</strong></td>
         <td style="background-color: #dddddd"><%= @device.id %></td>
       </tr>
       <tr>
         <td><strong>Created At</strong></td><td><%= @device.created_at %></td>
       </tr>
       <tr>
         <td><strong>Updated At</strong></td><td><%= @device.updated_at %></td>
       </tr>
       <tr>
         <td><strong>Name</strong></td><td><%= @device.name %></td>
       </tr>
       <tr>
         <td><strong>Location</strong></td><td><%= @device.location %></td>
       </tr>
       <tr>
         <td><strong>Device Type</strong></td><td><%= @device.device_type %></td>
       </tr>
       <tr>
         <td><strong>Serial Number</strong></td><td><%= @device.serial_number %></td>
       </tr>
       <tr>
        <td><strong>User</strong></td><td><%= @device.user_id ? @device.user.name : nil%></td>       </tr>
     </tbody>
   </table>
   <%= link_to 'Edit', edit_device_path(@device), class: "btn btn-md btn-danger" %>
   <%= link_to 'Back', :back, class: "btn btn-md btn-danger" %>
 </div>

</div>
