<div class="container-fluid">
  <h1>Devices</h1>
  <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
   <%= will_paginate @devices, class: "pagination-sm" %>
 </div>
 <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
  <%= form_tag devices_path, :method => 'get', class: "search" do %>
    <%= text_field_tag(:search, params[:search], options = {:placeholder => "Search ...", :class => "search_field"})%>
  <% end %>
</div>
  <table class="table table-bordered table-responsive table-condensed table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Name</th>
        <th>Location</th>
        <th>Device Type</th>
        <th>Model</th>
        <th>Serial Number</th>
        <th>User</th>
      </tr>
    </thead>

    <tbody>
      <% @devices.each do |device| %>
        <tr>
          <td style="text-align: right;"><%= link_to device.id, device %></td>
          <td><%= device.created_at %></td>
          <td><%= device.updated_at %></td>
          <td><%= device.name %></td>
          <td><%= device.location %></td>
          <td><%= device.device_type %></td>
          <td><%= device.model %></td>
          <td><%= device.serial_number%></td>
          <td><%= device.user_id ? (link_to device.user.name, device.user) : nil%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Users', users_path, class: "btn btn-md btn-danger" %>
  <%= link_to 'New Device', new_device_path, class: "btn btn-md btn-danger" %>
</div>
