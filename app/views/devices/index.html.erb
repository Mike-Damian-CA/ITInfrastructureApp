<div class="container-fluid">
  <h1>Devices</h1>

  <table class="table table-bordered table-responsive table-condensed table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Name</th>
        <th>Location</th>
        <th>Device Type</th>
        <th>Serial Number</th>
        <th>User</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @devices.each do |device| %>
        <tr>
          <td style="text-align: right;"><%= device.id %></td>
          <td><%= device.created_at %></td>
          <td><%= device.updated_at %></td>
          <td><%= device.name %></td>
          <td><%= device.location %></td>
          <td><%= device.device_type %></td>
          <td><%= device.serial_number%></td>
          <td><%= device.user_id ? (link_to device.user.name, device.user) : nil%></td>
          <td><%= link_to 'Show', device %></td>
          <td><%= link_to 'Edit', edit_device_path(device) %></td>
          <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Users', users_path, class: "btn btn-md btn-danger" %>
  <%= link_to 'New Device', new_device_path, class: "btn btn-md btn-danger" %>
</div>
